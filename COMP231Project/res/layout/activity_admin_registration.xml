<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AdminRegistration" >


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <TextView
        android:id="@+id/lblTitlePatiReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        style="@style/WelcomeLineOnEachPage"
        android:text="Personal Information" />

    <TableLayout
        android:id="@+id/tbPersonalInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTitlePatiReg"
        android:layout_marginTop="25dp" >

        <TableRow
            android:id="@+id/trFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FirstName" />
            
            <EditText
       			android:id="@+id/txtFirstName"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content"
       			android:inputType="textPersonName" >
        		<requestFocus />
    		</EditText>
        </TableRow>
        
        <TableRow
            android:id="@+id/trLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LastName" />
            
            <EditText
       			android:id="@+id/txtLastName"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content"
       			android:inputType="textPersonName" >
        		<requestFocus />
    		</EditText>
        </TableRow>
          <TableRow
            android:id="@+id/trGeder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender" />
           <RadioGroup
		        android:id="@+id/rgGender"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
 		       <RadioButton
		            android:id="@+id/rbMale"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Male" 
		            android:checked="true" />

		        <RadioButton
		            android:id="@+id/rbFemale"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Female" />
 		
   		 </RadioGroup>

            
            </TableRow>
        
        <TableRow
            android:id="@+id/trDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth" />

            <EditText
       			android:id="@+id/txtDateOfBirth"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content"
        		android:hint="dd/mm/yyyy" />
           
        </TableRow>

            <TableRow
            android:id="@+id/trEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID" />
            
            <EditText
       			android:id="@+id/txtEmail"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content"
        		android:ems="300"
       			android:inputType="textEmailAddress" >
        		<requestFocus />
    		</EditText>
        </TableRow>
        
         <TableRow
            android:id="@+id/trPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone No." />
            
            <EditText
       			android:id="@+id/txtPhone"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content"
       			android:inputType="phone" >
        		<requestFocus />
    		</EditText>
        </TableRow>
        
         <TableRow
            android:id="@+id/trApartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblApartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartment No." />
            
            <EditText
       			android:id="@+id/txtApartment"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content">
    		</EditText>
        </TableRow>
        
          <TableRow
            android:id="@+id/trStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street Name" />
            
            <EditText
       			android:id="@+id/txtStreet"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content">
    		</EditText>
        </TableRow>
        
         <TableRow
            android:id="@+id/trCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City" />
            
            <EditText
       			android:id="@+id/txtCity"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content">
    		</EditText>
        </TableRow>
        
        <TableRow
            android:id="@+id/trProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblProvince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province" />
            
            <EditText
       			android:id="@+id/txtProvince"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content">
    		</EditText>
        </TableRow>
        
         <TableRow
            android:id="@+id/trCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country" />
            
            <EditText
       			android:id="@+id/txtCountry"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content">
    		</EditText>
         </TableRow>
         
         <TableRow
            android:id="@+id/trPostalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblPostalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal Code" />
            
            <EditText
       			android:id="@+id/txtPostalCode"
        		android:layout_width="130dp"
        		android:layout_height="wrap_content">
    		</EditText>
    		
         </TableRow>
         
          
        
    </TableLayout>
      <Button
        android:id="@+id/btnRegisterAdmin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbPersonalInfo"
        android:text="Register" />
    
   
</RelativeLayout>

</ScrollView>